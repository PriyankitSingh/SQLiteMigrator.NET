<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>SqliteDatabaseMigrator</PackageId>
        <Version>0.0.1</Version>
        <Title>Lite SQLite Database Migrator</Title>
        <Authors>Priyankit Singh</Authors>
        <Description>A simple SQLite Database migrator that allows you to create and populate SQLite databases on the fly.</Description>
        <PackageProjectUrl>https://github.com/PriyankitSingh/SQLiteMigrator.NET</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/PriyankitSingh/SQLiteMigrator.NET/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/PriyankitSingh/SQLiteMigrator.NET</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Dapper" Version="2.1.66" />
      <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.2" />
      <PackageReference Include="System.Data.SQLite" Version="1.0.119" />
    </ItemGroup>

</Project>
